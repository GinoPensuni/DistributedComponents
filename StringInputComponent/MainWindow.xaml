<Window x:Class="StringInputComponent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TextInputComponent" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="Please type in a text:" Foreground="Black" FontSize="12" FontWeight="Bold" Grid.Row="0" IsEnabled="False" HorizontalAlignment="Left" Margin="10" VerticalAlignment="Center"></Label>
        <TextBox Name="InputBox" Margin="10" Grid.Row="1" AcceptsReturn="True" TextWrapping="Wrap" HorizontalAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" ScrollViewer.IsDeferredScrollingEnabled="True" ScrollViewer.VerticalScrollBarVisibility="Auto"></TextBox>
        <Button Click="Button_Click" Grid.Row="2" Height="35" VerticalAlignment="Center" HorizontalAlignment="Center" Name="btn" Content="Submit"/>
    </Grid>
</Window>
