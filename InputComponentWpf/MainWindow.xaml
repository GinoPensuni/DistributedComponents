<Window x:Class="InputComponentWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="150" Width="250" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>  
        <Label Content="Please type in a number: " Grid.Row="0" IsEnabled="False" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Center"></Label>
        <Label x:Name="input" Grid.Row="0" IsEnabled="False" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Bottom" FontWeight="Thin" FontStyle="Italic"></Label>
        <TextBox Name="InputBox" KeyUp="InputBox_KeyUp" Width="70"  HorizontalAlignment="Right" Margin="10" VerticalAlignment="Center"/>
        <Button Click="Button_Click" Grid.Row="1" Height="35" VerticalAlignment="Center" HorizontalAlignment="Center" Name="btn" Content="Submit"/>
    </Grid>
</Window>
